node {
    stage('Checkout SCM'){
        git branch: 'master', url: 'https://github.com/davquipe/tucarreraperu.git'
    }

    stage('Install node modules'){
        sh 'npm install --unsafe-perm'
    }

    stage('Build'){
        sh 'ng build --prod'
    }

    stage('Deploy'){
        sh 'node server.js'
    }
}
